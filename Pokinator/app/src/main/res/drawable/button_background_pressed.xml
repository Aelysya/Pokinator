<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:endColor="@color/white"
                android:startColor="#adadad"
                android:centerX="-1"
                android:type="sweep" />
            <stroke android:width="6dp" android:color="@color/border_red" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:bottom="6dp" android:right="6dp" android:left="6dp" android:top="6dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#919090" />
        </shape>
    </item>
    <item android:height="3dp" android:gravity="center" android:left="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#d3d2d2" />
        </shape>
    </item>
</layer-list>