<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:endColor="@color/white"
                android:startColor="@color/light_gray"
                android:gradientRadius="500"
                android:centerX="-1"
                android:type="sweep" />
            <stroke android:width="3dp" android:color="@color/dark_gray" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:bottom="3dp" android:right="3dp" android:left="3dp" android:top="3dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#cdcdcd" />
        </shape>
    </item>
    <item android:height="3dp" android:gravity="center" android:left="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#dfdfdf" />
        </shape>
    </item>
</layer-list>