<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="300dp" android:height="50dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/red"/>
            <stroke android:width="6dp" android:color="@color/dark_gray" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:width="30dp" android:left="200dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/green"/>
            <stroke android:width="3dp" android:color="@color/dark_gray" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>